<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_user_identification_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:orientation="vertical" android:padding="0dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:id="@+id/user_identification">


        <TextView
            android:id="@+id/fragment_user_identification_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Show us who you are..."
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/fragment_user_identification_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/fragment_user_identification_header"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:contentDescription="logo"
            android:src="@drawable/ic_action_camera" />

        <EditText
            android:id="@+id/fragment_user_identification_email_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/fragment_user_identification_photo"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:hint="@string/email_address_or_phone_number"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textSize="16sp" />


        <Button
            android:id="@+id/fragment_user_identification_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_user_identification_email_address"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/white_gray_gradient"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Start Planting"
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

</ScrollView>