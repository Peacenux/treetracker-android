<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_user_details_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:orientation="vertical" android:padding="0dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:id="@+id/user_identification">


        <TextView
            android:id="@+id/fragment_user_details_header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Provide your details to continue"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/fragment_user_details_first_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/fragment_user_details_header"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="@string/first_name"
            android:inputType="text"
            android:visibility="visible"

            />

        <EditText
            android:id="@+id/fragment_user_details_last_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/fragment_user_details_first_name"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:visibility="visible"
            android:hint="@string/last_name"
            android:inputType="text"

            />

        <EditText
            android:id="@+id/fragment_user_details_organization"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/fragment_user_details_last_name"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:visibility="visible"
            android:hint="@string/organization"
            android:inputType="text"

            />

        <CheckBox
            android:id="@+id/fragment_signup_privacy_policy_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/fragment_user_details_organization"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:textColorLink="#1B5E20"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fragment_signup_privacy_policy_link"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/fragment_user_details_organization"
            android:layout_toRightOf="@id/fragment_signup_privacy_policy_checkbox"
            android:linksClickable="true"
            android:text="@string/privacy_policy" />

        <Button
            android:id="@+id/fragment_user_details_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_signup_privacy_policy_checkbox"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/white_gray_gradient"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="All set!"
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>
